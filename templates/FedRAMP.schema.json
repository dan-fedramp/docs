{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schema.json",
  "title": "FedRAMP Machine Readable Requirements Schema",
  "description": "This schema defines the structure for FedRAMP Machine Readable Requirements documents. It is currently in rapid development and may change frequently.",
  "type": "object",
  "required": [
    "info"
  ],
  "properties": {
    "info": {
      "type": "object",
      "required": [
        "name",
        "short_name",
        "current_release",
        "types",
        "releases",
        "front_matter"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "short_name": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "current_release": {
          "type": "string",
          "pattern": "^\\d{2}\\.\\d{2}[A-Z]$"
        },
        "types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "FRR",
              "FRD",
              "FRA",
              "KSI",
              "FRB"
            ]
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "releases": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "published_date",
              "description",
              "effective",
              "public_comment"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^\\d{2}\\.\\d{2}[A-Z]$"
              },
              "published_date": {
                "type": "string",
                "format": "date"
              },
              "description": {
                "type": "string"
              },
              "public_comment": {
                "type": "boolean"
              },
              "effective": {
                "type": "object",
                "properties": {
                  "20x": {
                    "$ref": "#/$defs/release_target"
                  },
                  "Rev5": {
                    "$ref": "#/$defs/release_target"
                  }
                },
                "additionalProperties": false
              },
              "related_rfcs": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "start_date",
                    "end_date",
                    "id",
                    "url",
                    "short_name",
                    "full_name",
                    "discussion_url"
                  ],
                  "properties": {
                    "start_date": {
                      "type": "string",
                      "format": "date"
                    },
                    "end_date": {
                      "type": "string",
                      "format": "date"
                    },
                    "id": {
                      "type": "string"
                    },
                    "url": {
                      "type": "string",
                      "format": "uri"
                    },
                    "discussion_url": {
                      "type": "string",
                      "format": "uri"
                    },
                    "short_name": {
                      "type": "string"
                    },
                    "full_name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "front_matter": {
          "type": "object",
          "required": [
            "authority",
            "purpose",
            "expected_outcomes"
          ],
          "properties": {
            "authority": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "reference",
                  "reference_url",
                  "description"
                ],
                "properties": {
                  "reference": {
                    "type": "string"
                  },
                  "reference_url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "description": {
                    "type": "string"
                  },
                  "delegation": {
                    "type": "string"
                  },
                  "delegation_url": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            },
            "purpose": {
              "type": "string"
            },
            "expected_outcomes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "FRA": {
      "type": "object",
      "patternProperties": {
        "^[A-Z]{3}$": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "purpose",
              "requirements"
            ]},
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^FRA-[A-Z]{3}-\\d{2}$"
              },
              "disclaimer": {
                "type": "string"
              },
              "purpose": {
                "type": "string"
              },
              "requirements": {
                  "$ref": "#/$defs/requirement_section"
                 },
              "referenced_fr": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
            }
          }
        },
    "FRD": {
      "type": "object",
      "patternProperties": {
        "^[A-Z]{3}$": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "term",
              "definition"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^FRD-[A-Z]{3}-\\d{2}$"
              },
              "term": {
                "type": "string"
              },
              "definition": {
                "type": "string"
              },
              "note": {
                "type": "string"
              },
              "reference": {
                "type": "string"
              },
              "reference_url": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        }
      }
    },
    "FRR": {
      "type": "object",
      "patternProperties": {
        "^[A-Z]{3}$": {
          "type": "object",
          "required": [
            "base"
          ],
          "properties": {
            "base": {
              "$ref": "#/$defs/requirement_section"
            },
            "exceptions": {
              "$ref": "#/$defs/requirement_section"
            },
            "routine_recurring": {
              "$ref": "#/$defs/requirement_section"
            },
            "adaptive": {
              "$ref": "#/$defs/requirement_section"
            },
            "transformative": {
              "$ref": "#/$defs/requirement_section"
            },
            "impact": {
              "$ref": "#/$defs/requirement_section"
            },
            "application": {
              "$ref": "#/$defs/requirement_section"
            },
            "id": {
              "$ref": "#/$defs/requirement_section"
            },
            "access_control": {
              "$ref": "#/$defs/requirement_section"
            },
            "trust_center": {
              "$ref": "#/$defs/requirement_section"
            },
            "apply": {
              "$ref": "#/$defs/requirement_section"
            },
            "reporting": {
              "$ref": "#/$defs/requirement_section"
            },
            "timeframes": {
              "$ref": "#/$defs/requirement_section"
            },
            "timeframe-low": {
              "$ref": "#/$defs/requirement_section"
            },
            "timeframe-moderate": {
              "$ref": "#/$defs/requirement_section"
            },
            "timeframe-high": {
              "$ref": "#/$defs/requirement_section"
            },
            "agencies": {
              "$ref": "#/$defs/requirement_section"
            }
          }
        }
      }
    },
    "KSI": {
      "type": "object",
      "patternProperties": {
        "^[A-Z]{3}$": {
          "type": "object",
          "required": [
            "id",
            "name",
            "indicator",
            "requirements"
          ],
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^KSI-[A-Z]{3}$"
            },
            "name": {
              "type": "string"
            },
            "indicator": {
              "type": "string"
            },
            "requirements": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "id",
                  "statement"
                ],
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^KSI-[A-Z]{3}-\\d{2}$"
                  },
                  "statement": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "release_target": {
      "type": "object",
      "properties": {
        "timeline": {
          "type": "object",
          "properties": {
            "pilot": {
              "type": "object",
              "properties": {
                "start_date": {
                  "type": "string"
                },
                "designator": {
                  "type": "string"
                },
                "comment": {
                  "type": "string"
                }
              }
            },
            "closed_beta": {
              "type": "object",
              "properties": {
                "start_date": {
                  "type": "string"
                },
                "designator": {
                  "type": "string"
                },
                "comment": {
                  "type": "string"
                }
              }
            }
          }
        },
        "specific_release": {
          "type": "string",
          "pattern": "^(20x|R5)\\.[A-Z]{3}\\.((P|B)\\d+|WR)\\.\\d{2}\\.\\d{2}[A-Z]$"
        },
        "comment": {
          "type": "string"
        }
      }
    },
    "requirement_section": {
      "type": "object",
      "required": [
        "application",
        "requirements",
        "id"
      ],
      "properties": {
        "application": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "requirements": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "statement",
              "affects",
              "primary_key_word",
              "impact"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^FRR-[A-Z]{3}(?:-[A-Z]{2})*-\\d{2}$"
              },
              "statement": {
                "type": "string"
              },
              "affects": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "Providers",
                    "Agencies",
                    "3PAOs",
                    "All"
                  ]
                }
              },
              "primary_key_word": {
                "type": "string",
                "enum": [
                  "MUST",
                  "SHOULD",
                  "MAY",
                  "SHOULD NOT",
                  "MUST NOT",
                  "NONE"
                ]
              },
              "referenced_fr": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "is_interim": {
                "type": "boolean"
              },
              "following_information": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "following_information_bullets": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "note": {
                "type": "string"
              },
              "pain_timeframes": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": [
                    "pain",
                    "max_days_irv_lev",
                    "max_days_nirv_lev",
                    "max_days_nlev"
                  ],
                  "properties": {
                    "pain": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "max_days_irv_lev": {
                      "anyOf": [
                        {
                          "type": "integer",
                          "minimum": 0
                        },
                        {
                          "type": "string"
                        }
                      ]
                    },
                    "max_days_nirv_lev": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "max_days_nlev": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "additionalProperties": false
                },
                "uniqueItems": true
              },
              "reference": {
                "type": "string"
              },
              "reference_url": {
                "type": "string",
                "format": "uri"
              },
              "applies_to": {
                "type": "string"
              },
              "impact": {
                "type": "object",
                "required": [
                  "low",
                  "moderate",
                  "high"
                ],
                "properties": {
                  "low": {
                    "type": "boolean"
                  },
                  "moderate": {
                    "type": "boolean"
                  },
                  "high": {
                    "type": "boolean"
                  }
                }
              },
              "examples": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": [
                    "id",
                    "key_tests",
                    "examples"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "minLength": 1
                    },
                    "key_tests": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "examples": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string",
                        "minLength": 1
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    }
  }
}

